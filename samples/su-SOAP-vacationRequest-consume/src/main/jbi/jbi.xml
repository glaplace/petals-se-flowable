<jbi:jbi version="1.0"
   xmlns:vacation="http://petals.ow2.org/se/Activitibpmn/1.0/su"
   xmlns:jbi="http://java.sun.com/xml/ns/jbi"
   xmlns:petalsCDK="http://petals.ow2.org/components/extensions/version-5"
   xmlns:soap="http://petals.ow2.org/components/soap/version-4"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

   <!-- Import a Service into Petals or Expose a Petals Service => use a BC. -->
   <jbi:services binding-component="true">

      <!-- Expose a Petals Service => consumes a Service. -->
      <jbi:consumes interface-name="vacation:demandeDeConges"
         service-name="vacation:demandeDeCongesService" >

         <!-- CDK specific elements -->
         <petalsCDK:timeout>500</petalsCDK:timeout>
         <petalsCDK:mep xsi:nil="true" />

         <!-- Component specific elements -->
         <soap:service-name>DemandeDeConges</soap:service-name>
         <soap:mode>SOAP</soap:mode>
         <soap:enable-http-transport>true</soap:enable-http-transport>
         <soap:enable-jms-transport>false</soap:enable-jms-transport>
      </jbi:consumes>
   </jbi:services>
</jbi:jbi>