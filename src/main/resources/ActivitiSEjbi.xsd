<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://java.sun.com/xml/ns/jbi" xmlns:jbi="http://java.sun.com/xml/ns/jbi"
	xmlns:petalsCDK="http://petals.ow2.org/components/extensions/version-5"
	xmlns:petals-se-activitibpmn="http://petals.ow2.org/components/petals-se-activitibpmn/version-1.0"
	elementFormDefault="qualified">

	<xs:import namespace="http://petals.ow2.org/components/petals-se-activitibpmn/version-1.0"
		schemaLocation="ActivitiSEextensions.xsd" />

	<xs:redefine schemaLocation="abstractCDKjbi.xsd">
		<xs:complexType name="Component">
			<xs:complexContent>
				<xs:extension base="jbi:Component">
					<xs:sequence>
						<!-- the Activiti DataBase extensions -->
						<xs:element ref="petals-se-activitibpmn:jdbcDriver"
						    maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:jdbcUrl"
						    maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:jdbcUsername"
						    maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:jdbcPassword"
						    maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:jdbcMaxActiveConnections"
						    maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:jdbcMaxIdleConnections"
						    maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:jdbcMaxCheckoutTime"
							maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:jdbcMaxWaitTime" 
						    maxOccurs="1" minOccurs="0" />
						<xs:element ref="petals-se-activitibpmn:databaseType"
						    maxOccurs="1" minOccurs="0"/>
						<xs:element ref="petals-se-activitibpmn:databaseSchemaUpdate"
							maxOccurs="1" minOccurs="0" />
					</xs:sequence>
				</xs:extension>
			</xs:complexContent>
		</xs:complexType>
	</xs:redefine>

	<!--
		The definition of the root element here takes account of the redefined
		types
	-->
	<xs:element name="jbi" type="jbi:Jbi" />
</xs:schema>
