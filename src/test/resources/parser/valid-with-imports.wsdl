<wsdl:definitions name="demandeDeCongesService"
   targetNamespace="http://petals.ow2.org/se/Activitibpmn/1.0/su"
   xmlns:tns="http://petals.ow2.org/se/Activitibpmn/1.0/su" xmlns:bpmn="http://petals.ow2.org/se/bpmn/annotations/1.0"
   xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
   xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/">

   <wsdl:import location="abstract-import.wsdl" namespace="http://petals.ow2.org/se/Activitibpmn/1.0/su" />

   <!-- ======================== BINDINGS ======================================= -->
   <wsdl:binding name="demandeDeCongesBinding" type="tns:demandeDeConges">
      <soap:binding style="document"
         transport="http://schemas.xmlsoap.org/soap/http" />
      <wsdl:operation name="demanderConges">
         <soap:operation
            soapAction="http://petals.ow2.org/se/Acitivibpmn/1.0/su/demanderConges" />
         <bpmn:operation bpmnProcess="vacationRequest"
            bpmnActionType="startEvent" bpmnAction="request" />
         <bpmn:processId outMsg="numeroDde" faultMsg="numeroDde" />
         <bpmn:userId>/*[local-name()='demande']/*[local-name()='demandeur']</bpmn:userId>
         <bpmn:variable bpmn="numberOfDays" inMsg="nbJourDde" />
         <bpmn:variable bpmn="startDate" inMsg="DateDebutDde" />
         <bpmn:variable bpmn="vacationMotivation" inMsg="motifDde" />
         <wsdl:input>
            <soap:body use="literal" />
         </wsdl:input>
         <wsdl:output>
            <soap:body use="literal" />
         </wsdl:output>
         <wsdl:fault>
            <soap:body use="literal" />
         </wsdl:fault>
      </wsdl:operation>
      <wsdl:operation name="validerDemande">
         <soap:operation
            soapAction="http://petals.ow2.org/se/Activitibpmn/1.0/handleRequest" />
         <bpmn:operation bpmnProcess="vacationRequest"
            bpmnActionType="userTask" bpmnAction="handleRequest" />
         <bpmn:processId inMsg="numeroDde" outMsg="numeroDde"
            faultMsg="numeroDde" />
        <bpmn:userId>/*[local-name()='validation']/*[local-name()='valideur']</bpmn:userId>
         <bpmn:variable bpmn="vacationApproved" inMsg="approbation" />
         <bpmn:variable bpmn="managerMotivation" inMsg="motifRefus" />
         <wsdl:input>
            <soap:body use="literal" />
         </wsdl:input>
         <wsdl:output>
            <soap:body use="literal" />
         </wsdl:output>
         <wsdl:fault>
            <soap:body use="literal" />
         </wsdl:fault>
      </wsdl:operation>
      <wsdl:operation name="ajusterDemande">
         <soap:operation
            soapAction="http://petals.ow2.org/se/Activitibpmn/1.0/adjustVacationRequestTask" />
         <bpmn:operation bpmnProcess="vacationRequest"
            bpmnActionType="userTask" bpmnAction="adjustVacationRequestTask" />
         <bpmn:processId inMsg="numeroDdeInitiale"
            outMsg="numeroDde" faultMsg="numeroDde" />
        <bpmn:userId>/*[local-name()='ajustement']/*[local-name()='demandeur']</bpmn:userId>
         <bpmn:variable bpmn="numberOfDays" inMsg="nbJourNouvelleDde" />
         <bpmn:variable bpmn="startDate" inMsg="DateDebutNouvelleDde" />
         <bpmn:variable bpmn="vacationMotivation" inMsg="motifNouvelleDde" />
         <bpmn:variable bpmn="resendRequest" inMsg="soumettreModif" />
         <wsdl:input>
            <soap:body use="literal" />
         </wsdl:input>
         <wsdl:output>
            <soap:body use="literal" />
         </wsdl:output>
         <wsdl:fault>
            <soap:body use="literal" />
         </wsdl:fault>
      </wsdl:operation>
   </wsdl:binding>
   <!-- ======================== SERVICE (SU jbi.xml service-name) ============== -->
   <wsdl:service name="demandeDeCongesService">
      <wsdl:port name="autogenerate" binding="tns:demandeDeCongesBinding">
         <soap:address location="http://localhost:9003/demandeDeConges" />
      </wsdl:port>
   </wsdl:service>

</wsdl:definitions>